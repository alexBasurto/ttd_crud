extends ../layout

block content
    h1 Nuevo Producto
    if error
        h2= error
    form(action="/products", method="post", enctype="multipart/form-data") 
        label(for="name") Nombre*
        input(type="text", name="name", id="name", class="input-field")

        label(for="brand") Marca*
        input(type="text", name="brand", id="brand", class="input-field")

        label(for="price") Precio*
        input(type="text", name="price", id="price", class="input-field")

        label(for="category") Categor√≠a*
        input(type="file", name="category", id="category", class="input-field")
            
        label(for="stock") Stock*
        input(type="text", name="stock", id="stock", class="input-field")
